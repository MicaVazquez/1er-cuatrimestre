#include <stdio.h>
#include <stdlib.h>


void saludar()
{
	printf("Hola!!!\n");
}

int main(void) {

	void (*pFuncion)(void);
	pFuncion = saludar;
	pFuncion();
	return EXIT_SUCCESS;
}
