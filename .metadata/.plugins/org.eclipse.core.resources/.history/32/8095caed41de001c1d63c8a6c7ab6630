/*
Realizar una función que reciba un puntero a char y dos char.
 La función deberá reemplazar en la cadena cada ocurrencia del primer carácter recibido, por el segundo.
 Retornando la cantidad de reemplazos o -1 en caso de error
 */
#include <stdio.h>
#include <stdlib.h>

int reemplazar(char* cadena,char primerCaracter,char segundoCaracter)
{
	int retorno = -1;
	int i;
	int t;

	if(cadena != NULL)
	{
       if(strlen(cadena)>0)
       {
    	   retorno = 0;
    	   t= strlen(cadena);
    	   for(i=0;i<t;i++)
    	   {
              if(*(cadena+i) == primerCaracter)// puede igualar por que e un char no una cadena
              {
            	  *(cadena + i) = segundoCaracter;
            	  retorno ++;
              }
    	   }
       }
	}



	return retorno;
}
int main(void) {

	char palabra[51] = {"Hola mundo"};
	char primer = 'a';
	char segundo = 'o';

	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}

